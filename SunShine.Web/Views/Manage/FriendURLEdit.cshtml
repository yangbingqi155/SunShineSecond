@using SunShine.BLL;
@using SunShine.Model;
@model SunShine.Model.FriendURLViewModel
@{
    Layout = "~/Views/Shared/_ManageLayout.cshtml";
    ViewBag.Title = "编辑友情链接";
    if (string.IsNullOrEmpty(Model.idurl))
    {
        ViewBag.Title = "新增友情链接";
    }
}


<div class="ManageRightTitle">
    <ol class="breadcrumb">
        <li><a href="#">网站管理</a></li>
        <li><a href="@Url.Action("FriendURLList","Manage")">友情链接</a></li>
        <li><a href="#" class="active">@(string.IsNullOrEmpty(Model.idurl) ? "新增友情链接" : "编辑友情链接")</a></li>
    </ol>
</div>
<div class="ManageRightContent">
    <form action="@Url.Action("FriendURLEdit","Manage")" method="post" class="form-horizontal">
        <div class="merc-edit-box ">
            <fieldset>
                @Html.HiddenFor(model => model.idurl)
                <div class="form-group">
                    @Html.LabelFor(model => model.url, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => model.url, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.url)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.title, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => model.title, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.title)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.sortno, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => model.sortno, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.sortno)
                </div>
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <div class="col-sm-2">

                    </div>
                    <div class="col-sm-10" style="padding-top:10px;">
                        <input type="submit" value="保存" class="btn btn-primary" />
                    </div>
                </div>
            </fieldset>
        </div>
    </form>
</div>