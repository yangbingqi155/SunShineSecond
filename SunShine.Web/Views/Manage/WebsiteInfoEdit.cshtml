    ViewBag.Title = "编辑网站信息";
}
<script type="text/javascript">
    $(function () {
        if (ViewData["Message"]) {
        
        }
    });
</script>
<div class="ManageRightTitle">
    <ol class="breadcrumb">
        <li><a href="#">网站管理</a></li>
        <li><a href="#" class="active">网站信息</a></li>
    </ol>
</div>
<div class="ManageRightContent">
    <form id="form1" action="@Url.Action("WebsiteInfoEdit","Manage")" method="post" class="form-horizontal">
        <div class="merc-edit-box ">
            <fieldset>
                @Html.HiddenFor(model => model.idsite)
                <div class="form-group">
                    @Html.LabelFor(model => model.sitename, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-3">
                        @Html.TextBoxFor(model => model.sitename, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.sitename)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.copyright, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-7">
                        @Html.TextBoxFor(model => model.copyright, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.copyright)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.address, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-7">
                        @Html.TextBoxFor(model => model.address, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.address)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.hotphoneallcountry, new { @class = "col-sm-2 control-label" })
