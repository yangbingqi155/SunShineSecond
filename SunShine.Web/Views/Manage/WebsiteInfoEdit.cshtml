                        @Html.TextBoxFor(model => model.hotphone, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.hotphone)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.hotphone2, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.hotphone2, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.hotphone2)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.phone, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.phone, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.phone)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.qq, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.qq, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.qq)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.qq2, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.qq2, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.qq2)
                </div>
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <div class="col-sm-2">
                    </div>
                    <div class="col-sm-10" style="padding-top:10px;">
                        <input type="submit" value="保存" id="btnSave" class="btn btn-primary" />
                    </div>
                </div>
            </fieldset>
        </div>
    </form>
</div>

