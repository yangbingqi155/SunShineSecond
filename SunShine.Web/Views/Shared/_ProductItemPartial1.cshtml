@using SunShine.Model;
@using SunShine.Web.Utils;
@model List<ProductViewModel>
@{
    Layout = null;
}

@{
    if (Model != null && Model.Count > 0)
    {
        <div class="cp_list1">
            <ul>
                @{
                    int i = 0;
                }
                @foreach (var item in Model)
                {
                    <li>
                        <div class="cp_img">
                            <a href="@Url.Action("List","Product",new { idproduct=item.idproduct})" title="@item.name"><img src="@Url.Content(item.img)" style="width:346px;height:230px;" alt="@item.name" /></a>
                            <div class="cp_bottom">
                                <div class="cp_name"><a href="@Url.Action("List","Product",new { idproduct=item.idproduct})">@item.name</a></div>
                                @if (!BrowerDetectorHelper.IsMobile())
                                {
                                    <div class="ckxq_ljzx"><a target="_blank" href="http://wpa.qq.com/msgrd?v=3&uin=3317300173&site=qq&menu=yes">立即咨询</a></div>
                                }
                            </div>
                        </div>
                       
                        
                        
                    </li>
                    i++;
                }
            </ul>
        </div>
    }
    else
    {
        <div class="no_data_div">暂无产品</div>
    }
}

